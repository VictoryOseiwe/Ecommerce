<style>
    .products-container {
        padding: 2rem 0;
        margin-bottom: 5rem;
    }

    .products-category-container {
        display: flex;
        justify-content: space-around;
        /* align-items: center; */
        font-family: "Roboto", sans-serif;
        /* background-color: #d0d0d0; */
        /* padding: 1rem 0; */
        flex-wrap: wrap;
        gap: 2rem;
    }

    .products-category-container a {
        cursor: pointer;
        transition: .3s ease-in-out;
        text-decoration: none;
        color: #000000;
    }

    .products-category-container a:hover {
        scale: 1.1;
    }

    .products-list-box {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .product-box {
        border: 1px solid #b2b2b2;
        border-radius: 10px;
        width: 300px;
        padding: 1rem;
        margin-top: 2rem;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-image-box {
        height: 290px;
        width: 290px;
    }
    
    .product-image-box img {
        margin: auto;
        width: 250px;
        height: 290px;
        object-fit: scale-down;
    }
    .product-text-row{
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="products-container">
    <div class="products-category-container container">
        <% category.forEach((item)=>{ %>
            <% if(item.isActive) { %>
                <a href="/user/home/<%= item.id %>" class="category-name">
                    <%- item.categoryName %>
                </a>
                <% } %>

                    <% }) %>

    </div>
    <div class="products-list-box container">


        <% products.forEach((product)=>{ %>

            <div class="product-box">
                <div class="product-image-box">

                    <img src="/<%= product.productImage[0] %>" alt="">
                </div>
                <div class="product-description-box">
                    <h6 class="product-text-row">
                        <%= product.productBrand %>
                    </h6>
                    <p class="product-name product-text-row">
                        <%= product.productName %>
                    </p>
                    <h5><i class="fa-solid fa-indian-rupee-sign product-text-row"></i>
                        <%= product.productPrice %>
                    </h5>
                </div>
            </div>

            <% }) %>





    </div>
</div>


