<style>
    .admin-login-container{
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: url('../../image/userlogin.png');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .login-form{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        width: 35vw;
        border: 1px solid #c8c8c8;
        border-radius: 10px;
        padding: 3rem 2rem;
        background-color: rgba(255, 255, 255, 0.4);
  -webkit-backdrop-filter: blur(5px);
  backdrop-filter: blur(5px);
    }
    .login-form input{
        width: 90%;
        height: 2.5rem;
        border-radius: 10px;
        outline: none;
        border: none;
        background-color: #e7e7e7;
        color: #000000;
        padding: 10px;
    }
    .login-form button{
        width: 10rem;
    }

</style>



<%- include('navbar') %>

<div class="admin-login-container">
    <form action="/user/login" method="post" class="login-form">
        <h2>User Login</h2>
        <input type="email" name="username" id="admin-login-input" placeholder="username" required>
        <input type="password" name="password" id="admin-login-input" placeholder="password" required>

        <% if(loginError){%>
            <label style="color: red;">
                <%= errorMessage %>
            </label>
        <% }%>

        <button class="btn btn-primary" type="submit">Login</button>
    </form>
</div>


<%- include('footer') %>