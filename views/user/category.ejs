
<style>
    .products-category-container {
        display: flex;
        justify-content: space-around;
        align-items: center;
        font-family: "Roboto", sans-serif;
        /* background-color: #f5f5f5; */
        /* border-radius: 5px; */
        padding: 1rem 0;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .products-category-container a {
        cursor: pointer;
        transition: .3s ease-in-out;
        text-decoration: none;
        color: #000000;
    }

    .products-category-container a:hover {
        scale: 1.1;
    }

</style>


<div class="products-category-container ">
    <!-- filter button which redirect to product list page -->
    <a href="/user/filter-products/?page=0" class="btn "><i class="fa-solid fa-arrow-down-short-wide"></i>Filter</a>
    <% category.forEach((item)=>{ %>
        <% if(item.isActive) { %>
            <a href="/user/home/?category=<%= item.categoryName %>" class="category-name">
                <%- item.categoryName %>
            </a>
            <% } %>

                <% }) %>

</div>